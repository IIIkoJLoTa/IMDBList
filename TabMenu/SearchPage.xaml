<Page x:Class="TabMenu.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TabMenu"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Grid Background="Bisque">
        <Image Name="Image1" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="287"/>
        <TextBox Name="TextBox1" HorizontalAlignment="Left" Height="36" TextWrapping="Wrap" Text="Enter the film name" VerticalAlignment="Top" Width="237" Margin="563,0,0,0" SelectionBrush="#FF22C0D9" CaretBrush="#FF3CCAE0" Foreground="#FF572EE4" FontFamily="Times New Roman" FontSize="20" Background="Bisque"/>
        <TextBox Name="TextBox2" HorizontalAlignment="Left" Height="229" Margin="366,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="311" SelectionBrush="#FF22C0D9" CaretBrush="#FF3CCAE0" Foreground="#FF572EE4" FontFamily="Times New Roman" FontSize="20" Background="Bisque"/>
        <Button Name="findFildButton" Content="Find Film" HorizontalAlignment="Left" VerticalAlignment="Top" Width="237" Margin="563,53,0,0" PreviewMouseLeftButtonDown="findFildButton_PreviewMouseLeftButtonDown"/>

    </Grid>
</Page>
